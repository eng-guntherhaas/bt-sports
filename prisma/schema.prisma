generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = []
  engineType      = "client"
}

datasource db {
  provider = "postgresql"
}

model Contato {
  id         Int       @id @default(autoincrement())
  nome       String    @db.VarChar(255)
  email      String?   @db.VarChar(255)
  telefone   String?   @db.VarChar(50)
  cidade     String?   @db.VarChar(100)
  estado     String?   @db.VarChar(2)
  mensagem   String
  created_at DateTime? @default(now()) @db.Timestamp(6)

  @@map("contatos")
}

model CategoriaViagem {
  id         Int       @id @default(autoincrement())
  nome       String    @unique @db.VarChar(100)
  slug       String    @unique @db.VarChar(100)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  pacotes    Pacote[]

  @@map("categorias_viagem")
}

model Pacote {
  id                Int              @id @default(autoincrement())
  nome              String           @db.VarChar(255)
  data_inicio       DateTime?        @db.Date
  preco             Decimal?         @db.Decimal(10, 2)
  texto_destaque    String?
  resumo            String?
  descricao         String?
  created_at        DateTime?        @default(now()) @db.Timestamp(6)
  updated_at        DateTime?        @default(now()) @updatedAt @db.Timestamp(6)
  categoria_id      Int?
  depoimentos       Depoimento[]
  fotos             Foto[]
  categorias_viagem CategoriaViagem? @relation(fields: [categoria_id], references: [id], onUpdate: NoAction, map: "pacotes_categoria_fk")

  @@map("pacotes")
}

model Foto {
  id         Int       @id @default(autoincrement())
  pacote_id  Int?
  url        String
  descricao  String?
  ordem      Int?      @default(0)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  tipo       String?   @db.VarChar(30)
  pacotes    Pacote?   @relation(fields: [pacote_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("fotos")
}

model Depoimento {
  id         Int       @id @default(autoincrement())
  nome       String    @db.VarChar(255)
  pacote_id  Int?
  data       DateTime? @db.Date
  texto      String
  created_at DateTime? @default(now()) @db.Timestamp(6)
  pacotes    Pacote?   @relation(fields: [pacote_id], references: [id], onUpdate: NoAction)

  @@map("depoimentos")
}

model User {
  id         String    @id @default(cuid())
  name       String?
  email      String    @unique
  password   String
  role       String?   @default("admin")
  created_at DateTime? @default(now()) @db.Timestamp(6)
  Account    Account[]
  Session    Session[]
}

model Account {
  id                String  @id @default(cuid())
  userid            String
  type              String
  provider          String
  provideraccountid String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "account_user_fk")

  @@unique([provider, provideraccountid], map: "account_provider_unique")
}

model Session {
  id           String   @id @default(cuid())
  sessiontoken String   @unique
  userid       String
  expires      DateTime @db.Timestamp(6)
  User         User     @relation(fields: [userid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "session_user_fk")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime @db.Timestamp(6)

  @@unique([identifier, token], map: "verification_unique")
}
