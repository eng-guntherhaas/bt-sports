generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

enum TipoFoto {
  CAPA
  GALERIA
  CARD
  BANNER
}

model Contato {
  id         Int      @id @default(autoincrement())
  nome       String   @db.VarChar(255)
  email      String?  @db.VarChar(255)
  telefone   String?  @db.VarChar(50)
  cidade     String?  @db.VarChar(100)
  estado     String?  @db.Char(2)
  mensagem   String
  created_at DateTime @default(now()) @db.Timestamp(6)

  @@index([created_at])
  @@index([email])
  @@map("contatos")
}

model CategoriaViagem {
  id         Int      @id @default(autoincrement())
  nome       String   @unique @db.VarChar(100)
  slug       String   @unique @db.VarChar(100)

  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  pacotes Pacote[]

  @@map("categorias_viagem")
}

model Pacote {
  id             Int      @id @default(autoincrement())
  nome           String   @db.VarChar(255)
  slug           String   @unique @db.VarChar(255)

  data_inicio    DateTime? @db.Date
  preco          Decimal?  @db.Decimal(10, 2)

  texto_destaque String?
  resumo         String?
  descricao      String?

  destaque       Boolean      @default(false)

  categoria_id   Int

  created_at     DateTime @default(now()) @db.Timestamp(6)
  updated_at     DateTime @updatedAt @db.Timestamp(6)
  deleted_at     DateTime?

  categoria CategoriaViagem @relation(fields: [categoria_id], references: [id], onDelete: Restrict)

  fotos        Foto[]
  depoimentos Depoimento[]

  @@index([categoria_id])
  @@index([destaque])
  @@index([data_inicio])
  @@map("pacotes")
}

model Foto {
  id         Int      @id @default(autoincrement())
  pacote_id  Int
  url        String
  descricao  String?
  ordem      Int      @default(0)
  tipo       TipoFoto @default(GALERIA)

  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  pacote Pacote @relation(fields: [pacote_id], references: [id], onDelete: Cascade)

  @@index([pacote_id])
  @@index([pacote_id, tipo])
  @@index([pacote_id, ordem])
  @@map("fotos")
}

model Depoimento {
  id         Int      @id @default(autoincrement())
  nome       String   @db.VarChar(255)
  texto      String
  data       DateTime? @db.Date

  pacote_id  Int

  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  pacote Pacote @relation(fields: [pacote_id], references: [id], onDelete: Cascade)

  @@index([pacote_id])
  @@index([data])
  @@unique([pacote_id, nome])
  @@map("depoimentos")
}

model User {
   id String @id @default(cuid())
  name       String?
  email      String   @unique
  password   String
  role       String   @default("admin")

  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(cuid())
  userid            String
  type              String
  provider          String
  provideraccountid String

  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userid], references: [id], onDelete: Cascade)

  @@unique([provider, provideraccountid])
}

model Session {
  id           String   @id @default(cuid())
  sessiontoken String   @unique
  userid       String
  expires      DateTime @db.Timestamp(6)

  user User @relation(fields: [userid], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime @db.Timestamp(6)

  @@unique([identifier, token])
}
